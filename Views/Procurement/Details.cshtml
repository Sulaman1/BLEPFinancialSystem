@model BLEPFinancialSystem.Models.CoreFinancial.Procurement.ProcurementPlan

@{
    ViewData["Title"] = "Procurement Plan Details";
}

<h1>Procurement Plan Details</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Plan Information</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Reference No:</dt>
                    <dd class="col-sm-8">@Model.ReferenceNo</dd>

                    <dt class="col-sm-4">Description:</dt>
                    <dd class="col-sm-8">@Model.Description</dd>

                    <dt class="col-sm-4">Estimated Amount:</dt>
                    <dd class="col-sm-8">@Model.EstimatedAmount.ToString("C")</dd>

                    <dt class="col-sm-4">Method:</dt>
                    <dd class="col-sm-8">@Model.Method</dd>

                    <dt class="col-sm-4">Status:</dt>
                    <dd class="col-sm-8">
                        <span class="badge @GetStatusBadge(Model.Status)">@Model.Status</span>
                    </dd>

                    <dt class="col-sm-4">Created Date:</dt>
                    <dd class="col-sm-8">@Model.CreatedDate.ToString("f")</dd>
                </dl>

                <div class="mt-4">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetStatusBadge(ProcurementStatus status)
    {
        return status switch
        {
            ProcurementStatus.Planning => "badge-secondary",
            ProcurementStatus.Advertisement => "badge-info",
            ProcurementStatus.Bidding => "badge-primary",
            ProcurementStatus.Evaluation => "badge-warning",
            ProcurementStatus.Awarded => "badge-success",
            ProcurementStatus.ContractSigned => "badge-dark",
            ProcurementStatus.Completed => "badge-success",
            ProcurementStatus.Cancelled => "badge-danger",
            _ => "badge-secondary"
        };
    }
}