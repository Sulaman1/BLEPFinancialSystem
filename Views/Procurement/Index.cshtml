@model IEnumerable<BLEPFinancialSystem.Models.CoreFinancial.Procurement.ProcurementPlan>

@{
    ViewData["Title"] = "Procurement Plans";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Procurement Plans</h1>
    <a asp-action="Create" class="btn btn-primary">Create New Plan</a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Reference No</th>
                        <th>Description</th>
                        <th>Estimated Amount</th>
                        <th>Method</th>
                        <th>Status</th>
                        <th>Created Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ReferenceNo</td>
                            <td>@item.Description</td>
                            <td>@item.EstimatedAmount.ToString("C")</td>
                            <td>@item.Method</td>
                            <td>
                                <span class="badge @GetStatusBadge(item.Status)">@item.Status</span>
                            </td>
                            <td>@item.CreatedDate.ToString("d")</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@functions {
    string GetStatusBadge(ProcurementStatus status)
    {
        return status switch
        {
            ProcurementStatus.Planning => "badge-secondary",
            ProcurementStatus.Advertisement => "badge-info",
            ProcurementStatus.Bidding => "badge-primary",
            ProcurementStatus.Evaluation => "badge-warning",
            ProcurementStatus.Awarded => "badge-success",
            ProcurementStatus.ContractSigned => "badge-dark",
            ProcurementStatus.Completed => "badge-success",
            ProcurementStatus.Cancelled => "badge-danger",
            _ => "badge-secondary"
        };
    }
}