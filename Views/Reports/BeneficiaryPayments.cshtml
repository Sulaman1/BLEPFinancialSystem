@model BLEPFinancialSystem.Models.ReportParameters
@{
    ViewData["Title"] = "Beneficiary Payments Report";
    var report = ViewBag.Report as BLEPFinancialSystem.Models.BeneficiaryPaymentReport;
}

<h1>Beneficiary Payments</h1>

<form asp-action="BeneficiaryPayments" method="post" class="mb-4">
    <div class="row">
        <div class="col-md-3">
            <label asp-for="StartDate"></label>
            <input asp-for="StartDate" class="form-control" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div class="col-md-3">
            <label asp-for="EndDate"></label>
            <input asp-for="EndDate" class="form-control" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
        <div class="col-md-3">
            <label asp-for="ReportFormat"></label>
            <select asp-for="ReportFormat" class="form-control">
                <option value="HTML">Web View</option>
                <option value="PDF">PDF Export</option>
                <option value="Excel">Excel Export</option>
            </select>
        </div>
        <div class="col-md-3 d-flex align-items-end">
            <input type="submit" value="Generate Report" class="btn btn-primary" />
        </div>
    </div>
</form>

@if (report != null)
{
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>Beneficiary Name</th>
                    <th>Payment Date</th>
                    <th>Amount</th>
                    <th>Purpose</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in report.Payments)
                {
                    <tr>
                        <td>@p.BeneficiaryName</td>
                        <td>@p.PaymentDate:d</td>
                        <td>@p.Amount.ToString("C")</td>
                        <td>@p.Description</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr class="font-weight-bold">
                    <td colspan="2" class="text-right">Total</td>
                    <td colspan="2">@report.Payments.Sum(x => x.Amount).ToString("C")</td>
                </tr>
            </tfoot>
        </table>
    </div>
}