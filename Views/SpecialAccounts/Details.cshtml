@model BLEPFinancialSystem.Models.WBSpecificModules.SpecialAccount.SpecialAccount

@{
    ViewData["Title"] = "Special Account Details";
}

<h1>Special Account Details</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Account Information</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Account Number:</dt>
                    <dd class="col-sm-8">@Model.AccountNumber</dd>

                    <dt class="col-sm-4">Bank Name:</dt>
                    <dd class="col-sm-8">@Model.BankName</dd>

                    <dt class="col-sm-4">Current Balance:</dt>
                    <dd class="col-sm-8">@Model.CurrentBalance.ToString("C")</dd>

                    <dt class="col-sm-4">Reconciliation Balance:</dt>
                    <dd class="col-sm-8">@Model.ReconciliationBalance.ToString("C")</dd>

                    <dt class="col-sm-4">Balance Difference:</dt>
                    <dd class="col-sm-8">@((Model.CurrentBalance - Model.ReconciliationBalance).ToString("C"))</dd>
                </dl>

                <div class="mt-4">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>

        <!-- Transactions Section -->
        <div class="card mt-4">
            <div class="card-header">
                <h5 class="card-title">Account Transactions</h5>
            </div>
            <div class="card-body">
                @if (Model.Transactions.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Description</th>
                                    <th>Amount</th>
                                    <th>Reference</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var transaction in Model.Transactions)
                                {
                                    <tr>
                                        <td>@transaction.TransactionDate.ToString("d")</td>
                                        <td>@transaction.Description</td>
                                        <td>@transaction.Amount.ToString("C")</td>
                                        <td>@transaction.Reference</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted">No transactions recorded for this account.</p>
                }
            </div>
        </div>
    </div>
</div>