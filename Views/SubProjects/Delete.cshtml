@model BLEPFinancialSystem.Models.ProjectManagement.SubProjectManagement.SubProject

@{
    ViewData["Title"] = "Delete Sub-Project";
}

<h1>Delete Sub-Project</h1>

<h3>Are you sure you want to delete this sub-project?</h3>

<div class="card">
    <div class="card-body">
        <h4>Sub-Project Information</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">Code:</dt>
            <dd class="col-sm-8">@Model.Code</dd>

            <dt class="col-sm-4">Title:</dt>
            <dd class="col-sm-8">@Model.Title</dd>

            <dt class="col-sm-4">Location:</dt>
            <dd class="col-sm-8">@Model.Location</dd>

            <dt class="col-sm-4">Approved Budget:</dt>
            <dd class="col-sm-8">@Model.ApprovedBudget.ToString("C")</dd>

            <dt class="col-sm-4">Status:</dt>
            <dd class="col-sm-8">@Model.Status</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>