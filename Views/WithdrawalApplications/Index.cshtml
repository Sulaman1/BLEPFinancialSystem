@model IEnumerable<BLEPFinancialSystem.Models.WBSpecificModules.Withdrawal.WithdrawalApplication>

@{
    ViewData["Title"] = "Withdrawal Applications";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Withdrawal Applications</h1>
    <a asp-action="Create" class="btn btn-primary">Create New Application</a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Application No</th>
                        <th>Application Date</th>
                        <th>Amount Requested</th>
                        <th>Purpose</th>
                        <th>Status</th>
                        <th>Documents</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ApplicationNo</td>
                            <td>@item.ApplicationDate.ToString("d")</td>
                            <td>@item.AmountRequested.ToString("C")</td>
                            <td>@item.Purpose</td>
                            <td>
                                <span class="badge @GetStatusBadge(item.Status)">@item.Status</span>
                            </td>
                            <td>@item.Documents.Count</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@functions {
    string GetStatusBadge(WBApplicationStatus status)
    {
        return status switch
        {
            WBApplicationStatus.Draft => "badge-secondary",
            WBApplicationStatus.Submitted => "badge-info",
            WBApplicationStatus.UnderReview => "badge-warning",
            WBApplicationStatus.Approved => "badge-success",
            WBApplicationStatus.Rejected => "badge-danger",
            WBApplicationStatus.Paid => "badge-dark",
            _ => "badge-secondary"
        };
    }
}